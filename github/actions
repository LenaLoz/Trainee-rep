name: Comment Trigger

on:
  issue_comment:
    types: [created]

jobs:
  run:
    if: startsWith(github.event.comment.body, '/describe') || startsWith(github.event.comment.body, '/review')
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Execute describe
      if: startsWith(github.event.comment.body, '/describe')
      run: |
        echo "Running /describe command"
        # Your script to describe

    - name: Execute review
      if: startsWith(github.event.comment.body, '/review')
      run: |
        echo "Running /review command"
        # Your script to review
